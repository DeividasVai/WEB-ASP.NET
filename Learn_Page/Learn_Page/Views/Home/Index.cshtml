@model List<Person>

@{

    ViewData["Title"] = "Home Page";
}

<div id="buttonTab" class="pageContainers">
    <div id="leftPanel" class="indexColumn">
        <button id="selectBtn1" class="indexButtons" data-dataType="warning">
            <b>Its an alert!</b>
            <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
        </button>
    </div>
    <div id="centerPanel" class="indexColumn">
        <button id="selectBtn2" class="indexButtons" data-dataType="info">
            <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
            <b>Active!</b>
            <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
        </button>
    </div>
    <div id="rightPanel" class="indexColumn">
        <button id="selectBtn3" class="indexButtons"  data-dataType="success">
            <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
            <b>Info!</b>
        </button>
    </div>
</div>

<div class="userInputs">
    <input type="text" id="firstName" placeholder="Name"/>
    <input type="text" id="lastName" placeholder="Last name"/>
    <input type="text" id="age" placeholder="Age"/>
</div>

<div id="tableTab" class="tableView">
    <table id="table1" class="table table-striped table-hover">
        <thead>
            <tr>
                <th id="col1">Firstname</th>
                <th id="col2">Lastname</th>
                <th id="col3">Age</th>
            </tr>
        </thead>
        <tbody id="tableRows" class="rows">
        @foreach (var person in Model)
        {
            <tr class="@person.ClassType">
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>@person.Age</td>
            </tr>
        }
        </tbody>
    </table>
</div>

