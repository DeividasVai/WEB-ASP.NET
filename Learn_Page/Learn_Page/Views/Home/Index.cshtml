@model List<Person>

@{
    ViewData["Title"] = "Home Page";
}

<div id="buttonTab" class="pageContainers">
    <div class="userInputs">
        <input type="text" id="firstName" placeholder="Name" class="indexInput" />
        <input type="text" id="lastName" placeholder="Last name" class="indexInput" />
        <input type="text" id="age" placeholder="Age" class="indexInput" />
    </div>
    <div id="leftPanel" class="btn-group">
        <button id="selectBtn1" type="button" data-dataType="success" class="btn btn-success actionBtn">Success</button>
        <button id="selectBtn2" type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="caret"></span>
            <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu">
            <li data-dataType="active" class="actionDropDown"><a href="#">Active</a></li>
            <li data-dataType="success" class="actionDropDown"><a href="#">Success</a></li>
            <li data-dataType="info" class="actionDropDown"><a href="#">Information</a></li>
            <li data-dataType="warning" class="actionDropDown"><a href="#">Warning</a></li>
            <li role="separator" class="divider"></li>
            <li data-dataType="danger" class="actionDropDown"><a href="#">Danger</a></li>
        </ul>
    </div>
</div>

<div id="tableTab" class="tableView">
    <table id="table1" class="table table-striped table-hover">
        <thead>
            <tr>
                <th id="col1">ID</th>
                <th id="col2">Firstname</th>
                <th id="col3">Lastname</th>
                <th id="col4">Age</th>
            </tr>
        </thead>
        <tbody id="tableRows" class="rows">
        @foreach (var person in Model)
        {
            <tr class="@person.ClassType">
                <td>@person.ID</td>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>@person.Age</td>
            </tr>
        }
        </tbody>
    </table>
</div>

<a class="hiddenBtn" href="#popup1">hiddenBtnHere1</a>

<div id="popup1" class="overlay">
    <div class="popup">
        <h2>Error</h2>
        <a class="close" href="#">&times;</a>
        <div class="content">
            You must fill in all of the fields in order to add them to the table.
        </div>
    </div>
</div>

